rules:
  html_fullscreen_posts:
    description: "Full-viewport background HTML posts"
    match_front_matter:
      full_screen: true
    requirements:
      - must_include_front_matter: true
        fields:
          - title
          - date
          - draft
          - description
          - tags
          - categories
          - full_screen
      - html_structure:
          - allow_full_document_tags: ["!DOCTYPE", "html", "head", "body"]
          - global_body_styles: true
          - preserve_hugo_layout: false
      - script_handling:
          - external_scripts_last: true
          - module_scripts: true
      - responsive_design:
          - full_viewport: true
    best_practices:
      - keep_js_minimal: true
      - maintain_hugo_seo: true
      - preserve_theme_colors: false
  html_blog_posts:
    match_front_matter:
      full_screen: false
    description: "Rules for HTML format blog posts in Hugo"
    requirements:
      - must_include_front_matter: true
        fields:
          - title
          - date
          - draft
          - description
          - tags
          - categories
      - html_structure:
          - no_global_body_styles: true
          - forbid_full_document_tags: ["!DOCTYPE", "html", "head", "body"]
          - container_class: "threejs-container" # or similar semantic name
          - scoped_styles: true
          - preserve_hugo_layout: true
      - script_handling:
          - external_scripts_last: true
          - module_scripts: true
      - responsive_design:
          - relative_units: true
          - mobile_friendly: true
    best_practices:
      - keep_js_minimal: true
      - use_scoped_selectors: true
      - maintain_hugo_seo: true
      - preserve_theme_colors: true
    examples:
      good: |
        ---
        title: "Interactive Demo"
        date: 2025-01-01
        draft: false
        description: "An interactive web component"
        tags: ["web", "interactive"]
        categories: ["demos"]
        ---
        
        <div class="demo-container">
          <!-- Content here -->
        </div>
        
        <style>
        .demo-container {
          /* Scoped styles */
        }
        </style>
        
        <script type="module">
          // Scoped JavaScript
        </script>
      bad: |
        <html>
        <head>
          <title>Bad Example</title>
          <style>
          body { /* Global overrides */ }
          </style>
        </head>
        <body>
          <!-- No front matter -->
          <!-- Global style overrides -->
        </body>
        </html>